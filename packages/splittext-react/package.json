{
  "name": "@splittext/react",
  "version": "0.6.0",
  "description": "A React Package For Splitting Text Into Characters, Words And Lines.",
  "private": false,
  "homepage": "https://splittext.pages.dev",
  "repository": "https://github.com/BytexDigital/splittext.git",
  "bugs": {
    "url": "https://github.com/BytexDigital/splittext/issues"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./hooks": "./dist/hooks/index.js"
  },
  "files": [
    "dist/**/*.{js,d.ts,css}"
  ],
  "sideEffects": false,
  "typesVersions": {
    "*": {
      "index": [
        "./index"
      ],
      "hooks": [
        "./hooks/index"
      ],
      "*": []
    }
  },
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "index": [
          "dist/index.d.ts"
        ],
        "hooks": [
          "dist/hooks/index.d.ts"
        ],
        "*": []
      }
    }
  },
  "scripts": {
    "build": "pnpm build:swc && pnpm types",
    "build:swc": "swc src -d dist --copy-files",
    "dev": "pnpm build:swc -w",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf dist && rm -rf .turbo",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "react",
    "split",
    "splitting",
    "splittext",
    "split text",
    "component"
  ],
  "author": "Elias Sebastian",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.90",
    "@types/node": "20.4.6",
    "@types/react": "^18.2.23",
    "@types/react-dom": "18.2.7",
    "chokidar": "^3.5.3",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">= 18.0.0",
    "react-dom": ">= 18.0.0"
  }
}

{
  "name": "@splittext/react",
  "version": "0.6.0",
  "description": "A React Package For Splitting Text Into Characters, Words And Lines.",
  "private": false,
  "homepage": "https://splittext.pages.dev",
  "repository": "https://github.com/BytexDigital/splittext.git",
  "bugs": {
    "url": "https://github.com/BytexDigital/splittext/issues"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./hooks": "./src/hooks/index.ts"
  },
  "files": [
    "dist/**/*.{js,d.ts,css}"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm build:swc && pnpm types",
    "build:swc": "swc src -d dist --copy-files",
    "build:tsup": "tsup src",
    "dev": "pnpm build:swc -w",
    "dev:tsup": "tsup src --watch",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf dist && rm -rf .turbo",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "react",
    "split",
    "splitting",
    "splittext",
    "split text",
    "component"
  ],
  "author": "Elias Sebastian",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.4.6",
    "@types/node": "20.4.6",
    "@types/react": "^18.2.64",
    "@types/react-dom": "18.2.7",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^13.5.6",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "react": ">= 18.0.0",
    "react-dom": ">= 18.0.0"
  }
}
{
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "preserve",
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}